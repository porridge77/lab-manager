<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TeacherMapper">

    <sql id="Base_Column_List">
        id,account,password,name,title,role
    </sql>

    <select id="selectAll" resultType="com.example.entity.Teacher">
        select
        <include refid="Base_Column_List" />
        from teacher
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="account != null"> and account like concat('%', #{account}, '%')</if>
            <if test="password != null"> and password= #{password}</if>
            <if test="name != null"> and name= #{name}</if>
            <if test="title != null"> and title= #{title}</if>
            <if test="role != null"> and role= #{role}</if>
        </where>
    </select>

    <select id="selectById" resultType="com.example.entity.Teacher">
        select
        <include refid="Base_Column_List" />
        from teacher
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from teacher
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Teacher" useGeneratedKeys="true">
        insert into teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="account != null">account,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="title != null">title,</if>
            <if test="role != null">role,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="account != null">#{account},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="title != null">#{title},</if>
            <if test="role != null">#{role},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Teacher">
        update teacher
        <set>
            <if test="account != null">
                account = #{account},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>